
{{> sessionHeader}}

<h1>{{title}}</h1>
<hr>
<div class="userDashboardInformation">
    <h3>My user information</h3>
    <p>Username: {{user.username}}</p>
    <p>E-mail: {{user.email}}</p>
    <p>First Name: {{user.firstName}}</p>
    <p>Last Name: {{user.lastName}}</p>
</div>
<hr>
<div class="newBlog">
<h3>Create new Blog</h3>
<form action="/dashboard/blogPost" method="post">
    <input type="text" name="title" placeholder="Blog Title">
    <textarea name="blogpost" placeholder="Create your blog post here..."></textarea>
    <button type="submit">Create Post</button>
</form>
</div>
<hr>
<h2>Your  blog posts</h2>
<div id="editPostContainer" class="editPostContainerShow editPostContainerHide">
    <input type="text" id="editBlogTitle">
    <textarea id="editBlogContent"></textarea>
    <button id="editBlogSubmitButton">Modify Blog Post</button>
</div>
{{#each blogs}}
<div class="blogContainer" id={{id}}>
    <button class="editPostButton">Edit Blog Post</button>
    <button class="deletePostButton">Delete Blog Post</button>
    <p>Title: <span id=t{{id}}>{{title}}</span></p>
    <p>Published on: {{publishDate}}</p>
    <p>Blog Post: <span id= b{{id}}>{{blog}}</span></p>
</div>
{{/each}}

{{> sessionFooter}}