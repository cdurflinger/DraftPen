
{{> sessionHeader}}

<h1>{{title}}</h1>
<h3>Create new Blog</h2>
<form action="/blogPost" method="post">
    <input type="text" name="title" placeholder="Blog Title">
    <textarea name="blogpost" placeholder="Create your blog post here..."></textarea>
    <button type="submit">Create Post</button>
</form>
<h2>Your  blog posts</h2>
{{#each blogs}}
<div class="blogContainer">
    <p>Title: {{title}}</p>
    <p>Blog Post: {{blog}}</p>
</div>
{{/each}}

{{> sessionFooter}}