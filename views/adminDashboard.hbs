
{{> adminHeader}}

<div class="block--container">
    <h1>{{title}}</h1>
    <hr>
    <div class="user__dashboard__information">
        <h3>My user information</h3>
        <p>Username: {{user.username}}</p>
        <p>E-mail: {{user.email}}</p>
        <p>First Name: {{user.firstName}}</p>
        <p>Last Name: {{user.lastName}}</p>
    </div>
    <hr>
    <div class="new__blog__container">
        <h3>Create new Blog</h3>
        <input type="text" id="newBlogTitle" name="title" placeholder="Blog Title">
        <textarea id="newBlogContent" name="blogpost" placeholder="Create your blog post here..."></textarea>
        <button id="createBlogButton">Create Post</button>
    </div>
    <hr>
    <h2>Your blog posts</h2>
    <div id="editPostContainer" class="editPostContainerShow editPostContainerHide">
        <input type="text" id="editBlogTitle">
        <textarea id="editBlogContent"></textarea>
        <button id="editBlogSubmitButton">Modify Blog Post</button>
    </div>
    <div class="userBlogContainer">
    {{#each blogs}}
    <article class="article__container" id={{id}}>
        <button class="post__button editPostButton">Edit Blog Post</button>
        <button class="post__button deletePostButton">Delete Blog Post</button>
        <p>Title: <span id=t{{id}}>{{title}}</span></p>
        <p>Published on: {{publishDate}}</p>
        <p>Blog Post: <span id= b{{id}}>{{blog}}</span></p>
    </article>
    {{/each}}
    </div>
</div>
{{> adminFooter}}