
{{> adminHeader}}

<div class="block--container">
    <h1>Welcome admin!</h1>
    <br>
    <button id="user__register__form__button">Register New User</button>
    <div id="register__form" class="form__container hide">
        <form action="/user/register" method="post">
            <label for="username">Username</label>
                <input type="text" name="username" id="username" placeholder="Username" value={{registerFields.username}}>
                <span id="username__span" class="invalid"></span>
            <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="E-mail" value={{registerFields.email}}>
                <span id="email__span" class="invalid"></span>
            <label for="firstname">First Name</label>
                <input type="text" name="firstname" id="firstname" placeholder="First Name" value={{registerFields.firstname}}>
                <span id="firstname__span" class="invalid"></span>
            <label for="lastname">Last Name</label>
                <input type="text" name="lastname" id="lastname" placeholder="Last Name" value={{registerFields.lastname}}>
                <span id="lastname__span" class="invalid"></span>
            <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Password">
                <span id="password__span" class="invalid"></span>
            <label for="confirmpassword">Re-Enter Password</label>
                <input type="password" name="confirmpassword" id="confirmpassword" placeholder="Confirm Password">
                <span id="confirmpassword__span" class="invalid"></span>
            <button type="submit">Submit</button>
        </form>
    </div>
    <br>
    <br>
    <div id="user__dashboard__container">
        <h2>All User Information</h2>
        {{#each userData}}
            <div id={{id}} class="user__data__container">
                <p>Username: {{username}}</p>
                <p>Permission Level: {{permission_level}}</p>
                <p>Email: {{email}}</p>
                <p>First Name: {{firstName}}</p>
                <p>Last Name: {{lastName}}</p>
                <a class="user__profile__links">Click here to modify user/users blog posts</a>
            </div>
            <hr>
        {{/each}}
    </div>
</div>
{{> adminFooter}}
<script src = '../script/validate.js'></script>
