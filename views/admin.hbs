
{{> adminHeader}}

<div class="block--container">
    <h1>Welcome admin!</h1>
    <br>
    <button id="user__register__form__button">Register New User</button>
    <div id="register__form" class="form__container hide">
        <form action="/user/register" method="post">
            <label for="userName">Username</label>
                <input type="text" name="username" id="user__name" placeholder="Username">
            <label for="email">Email</label>
                <input type="text" name="email" id="email" placeholder="E-mail">
            <label for="firstName">First Name</label>
                <input type="text" name="firstname" id="first__name" placeholder="First Name">
            <label for="lastName">Last Name</label>
                <input type="text" name="lastname" id="last__name" placeholder="Last Name">
            <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Password">
            <label for="reEnterPassword">Re-Enter Password</label>
                <input type="password" name="reEnterPassword" placeholder="Re-Enter Password">
            <button type="submit">Submit</button>
        </form>
    </div>
    <br>
    <br>
    <div id="user__dashboard__container">
        <h2>All User Information</h2>
        {{#each userData}}
            <div id={{id}} class="user__data__container">
                <p>Username: {{username}}</p>
                <p>Permission Level: {{permission_level}}</p>
                <p>Email: {{email}}</p>
                <p>First Name: {{firstName}}</p>
                <p>Last Name: {{lastName}}</p>
                <a class="user__profile__links">Click here to modify user/users blog posts</a>
            </div>
            <hr>
        {{/each}}
    </div>
</div>
{{> adminFooter}}
